

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="page-header text-center">
      <h3>Admin Login</h3>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%=  form_tag '/projects/sign_in', html: {method: "post"}, class:'form-horizontal' do %>


        <div class="form-group col-md-12 col-md-offset-2">
          <div class="input-group">
            <div class="input-group-addon"><%= fa_icon 'user' %></div>
            <%= text_field_tag :name, nil,  class: 'form-control' %>
          </div>
        </div>
        <div class="form-group col-md-12 col-md-offset-2">
          <div class="input-group">
            <div class="input-group-addon"><%= fa_icon 'lock' %></div>
            <%= password_field_tag :pass,nil, class: 'form-control' %>
          </div>
        </div>


        <div class="form-group col-md-12 col-md-offset-2">

          <%= submit_tag 'Login',class:"btn btn-primary pull-right"%>

        </div>


    <%end%>

  </div>
</div>
